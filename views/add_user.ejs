<%-include("partials/header.ejs")%>

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between">
           <div class="filter">
                <a href="/all_user">
                    <i class="fa-solid fa-angles-left"></i>
                    All users</a>
           </div>
        </div>

        <div class="new">
            <h2>New User</h2>
            <span class="account">Use the below form to create a new account</span>
        </div>

        <form class="add_user" action="/api/user" method="POST">
            <div class="new_user">
                <div>
                    <label for="name">Name</label>
                    <input type="hidden">
                    <input type="text" class="detail" name="name" placeholder="Marks Stienis">
                </div>
                <div>
                    <label for="name">Email</label>
                    <input type="text" name="email" class="detail"  placeholder="email@gmail.com">
                </div>
                <div>
                    <label for="gen">Gender</label>
                     <input type="radio" value="female" name="gender">
                     <span class="radio">Female</span>
                     <input type="radio" value="male" name="gender">
                     <span class="radio">Male</span>
                </div>
                <div>
                    <label for="gen">Status</label>
                     <input type="radio" style="margin-left: 38px;" name="status" value="active">
                     <span class="radio ">Active</span>
                     <input name="status" value="inactive" type="radio" style="margin-left: 38px;" style="margin-left: 10px;" name="Inactive">
                     <span class="radio">Inactive</span>
                </div>
                <div>
                    <button type="submit"> Save </button>
                </div>
            </div>
        </form>
    </div>
</main>

<%-include("partials/footer.ejs")%>